{
    "name": "Linkedin Templater",
    "description": "An ultra simple extension for using templates on Linkedin",
    "version": "2.00",
    "manifest_version": 2,
    "update_url": "https://clients2.google.com/service/update2/crx",
    "background": {
        "scripts": [
            "/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/people/invite*"
            ],
            "js": [
                "jquery-2.2.3.min.js",
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "browser_action": {
    "default_icon": "icon128.png"
    },
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" },
    "options_page": "options.html",
    "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}